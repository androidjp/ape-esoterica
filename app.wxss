/**app.wxss**/
@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #d4e2c2;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 12px;
    padding: 12px;
    position: relative;
}

.card-disable {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #c4c2c2;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 12px;
    padding: 12px;
    position: relative;
}

.common-label-style {
  font-size: 20px;
  font-weight: bold;
  padding:8px;
}