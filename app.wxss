/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #d4e2c2;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 12px;
    padding: 12px;
    position: relative;
}

.card-disable {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #c4c2c2;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 12px;
    padding: 12px;
    position: relative;
}

.common-label-style {
  font-size: 20px;
  font-weight: bold;
  padding:8px;
}